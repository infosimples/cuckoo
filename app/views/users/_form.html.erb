<%= simple_form_for(@user, html: { class: 'form-horizontal' }) do |f| %>

  <%= f.error_notification if f.error_notification %>

  <%= f.input :name, autofocus: true %>
  <%= f.input :email %>
  <%= f.input :time_zone, include_blank: false, priority: /UTC/ %>

  <% if current_user.is_admin %>
    <%= f.input :is_admin, label: 'Is admin?', as: :boolean %>
    <%= f.input :is_active, label: 'Is active?', as: :boolean %>
  <% end %>

  <%= f.input :password %>
  <%= f.input :password_confirmation %>

  <%= f.input :subscribed_to_user_summary_email, as: :boolean %>

  <% if current_user.is_admin? %>
    <%= f.input :subscribed_to_admin_summary_email, as: :boolean,
      wrapper_html: { id: 'admin-summary-email-subscription' } %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
