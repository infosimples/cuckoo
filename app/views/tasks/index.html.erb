<div class="page-header">
  <h1>Tasks</h1>
  <%= link_to '<i class="icon-plus"></i> Add New'.html_safe, new_task_path, :class => 'btn btn-large' %>
</div>

<div><strong><%= t('misc.tasks', count: @tasks.count) %></strong></div><br/>

<table class="table table-striped table-list">

  <thead>
    <tr>
      <% if @tasks.empty? %>
        <th> <div class="text-center alert alert-info"> <%= t :no_tasks %> </div> </th>
      <% else %>
        <th>Name</th>
      <% end %>
    </tr>
  </thead>

  <tbody>

    <% unless @tasks.empty? %>

      <% @tasks.each do |task| %>

        <tr>

          <td><%= task.name %></td>
          <td>
            <div class="btn-group">
              <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="icon-edit icon-white"></i> Actions
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to '<i class="icon-edit"></i> Edit'.html_safe, edit_task_path(task) %>
                </li>
              </ul>
            </div>
          </td>

        </tr>

      <% end %>

    <% end %>

  </tbody>

</table>